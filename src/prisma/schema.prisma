generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model Collection {
    id    String @id @default(cuid())
    title String @unique
    index Int
    links Link[] @relation(name: "LinkToCollection")

    @@index([id])
}

model Link {
    id     String  @id @default(cuid())
    title  String  @unique
    slug   String  @unique
    url    String  @unique
    index  Int
    hidden Boolean @default(false)
    clicks Click[] @relation(name: "ClickToLink")

    collectionId String
    Collection   Collection @relation(fields: [collectionId], references: [id], name: "LinkToCollection")

    @@index([id, slug])
}

model Click {
    id       String  @id @default(cuid())
    referrer String?
    country  String?

    linkId String
    link   Link   @relation(fields: [linkId], references: [id], name: "ClickToLink")

    createdAt DateTime @default(now())

    @@index([linkId])
}
